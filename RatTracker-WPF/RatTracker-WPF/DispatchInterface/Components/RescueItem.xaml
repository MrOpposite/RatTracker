             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RatTracker_WPF.DispatchInterface.Components"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300" Background="{Binding Path=Background}" Foreground="White">
	<Border BorderThickness="0,0,0,1" BorderBrush="{StaticResource brushEliteBlue}">
		<UniformGrid HorizontalAlignment="Stretch" Height="auto">
			<local:LabelWithValue Label="Client" Text="{Binding Client}" />
			<local:LabelWithValue Label="Client" Text="{Binding Client}" />
			<local:LabelWithValue Label="Client" Text="{Binding Client}" />
			<local:LabelWithValue Label="Client" Text="{Binding Client}" />
			<local:LabelWithValue Label="Client" Text="{Binding Client}" />
		</UniformGrid>
	</Border>
</UserControl>
